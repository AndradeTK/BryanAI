<!-- Modal Visualizador de PDF -->
<div id="pdfModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-5xl h-[90vh] flex flex-col">
        <div class="flex items-center justify-between p-4 border-b border-gray-200">
            <h3 id="pdfModalTitle" class="text-lg font-semibold text-gray-800">Visualizar Curr√≠culo</h3>
            <div class="flex items-center gap-2">
                <a id="pdfDownloadBtn" href="#" download class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm font-medium flex items-center gap-2">
