<% const pageTitle = curso ? 'Editar Curso' : 'Novo Curso'; %>
<%- include('../partials/layout-start', { title: pageTitle }) %>

<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-800"><%= curso ? 'Editar' : 'Novo' %> Curso/Certificação</h3>
        </div>
        
        <form action="<%= curso ? '/cursos/' + curso.id : '/cursos' %>" method="POST" class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Título do Curso *</label>
                    <input type="text" name="titulo_do_curso" required
                           value="<%= curso ? curso.titulo_do_curso : '' %>"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                           placeholder="Ex: Fundamentos de Suporte de TI">
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Emissor / Instituição *</label>
                    <input type="text" name="emissor_instituicao" required
                           value="<%= curso ? curso.emissor_instituicao : '' %>"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                           placeholder="Ex: Google, Udemy, Coursera">
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Descrição</label>
                    <textarea name="descricao" rows="4"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent resize-none"
                              placeholder="Descreva o conteúdo e aprendizados do curso..."><%= curso ? curso.descricao : '' %></textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Destaque no Currículo?</label>
                    <select name="destaque" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="Sim" <%= curso && curso.destaque === 'Sim' ? 'selected' : '' %>>Sim</option>
                        <option value="Não" <%= !curso || curso.destaque === 'Não' ? 'selected' : '' %>>Não</option>
                    </select>
                </div>
            </div>

            <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
                <a href="/cursos" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                    Cancelar
                </a>
                <button type="submit" class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition">
                    Salvar Curso
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/layout-end') %>
