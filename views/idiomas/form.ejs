<% const pageTitle = idioma ? 'Editar Idioma' : 'Novo Idioma'; %>
<%- include('../partials/layout-start', { title: pageTitle }) %>

<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-800"><%= idioma ? 'Editar' : 'Novo' %> Idioma</h3>
        </div>
        
        <form action="<%= idioma ? '/idiomas/' + idioma.id : '/idiomas' %>" method="POST" class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Idioma *</label>
                    <input type="text" name="idioma" required
                           value="<%= idioma ? idioma.idioma : '' %>"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                           placeholder="Ex: Inglês">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nível CEFR *</label>
                    <select name="nivel_cefr" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Selecione...</option>
                        <option value="A1 - Iniciante" <%= idioma && idioma.nivel_cefr === 'A1 - Iniciante' ? 'selected' : '' %>>A1 - Iniciante</option>
                        <option value="A2 - Básico" <%= idioma && idioma.nivel_cefr === 'A2 - Básico' ? 'selected' : '' %>>A2 - Básico</option>
                        <option value="B1 - Intermediário" <%= idioma && idioma.nivel_cefr === 'B1 - Intermediário' ? 'selected' : '' %>>B1 - Intermediário</option>
                        <option value="B2 - Intermediário Superior" <%= idioma && idioma.nivel_cefr === 'B2 - Intermediário Superior' ? 'selected' : '' %>>B2 - Intermediário Superior</option>
                        <option value="C1 - Avançado" <%= idioma && idioma.nivel_cefr === 'C1 - Avançado' ? 'selected' : '' %>>C1 - Avançado</option>
                        <option value="C2 - Proficiente" <%= idioma && idioma.nivel_cefr === 'C2 - Proficiente' ? 'selected' : '' %>>C2 - Proficiente</option>
                        <option value="Nativo" <%= idioma && idioma.nivel_cefr === 'Nativo' ? 'selected' : '' %>>Nativo</option>
                    </select>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Certificação/Exame</label>
                    <input type="text" name="certificacao_exame"
                           value="<%= idioma ? idioma.certificacao_exame : '' %>"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                           placeholder="Ex: TOEFL 100, IELTS 7.5, Cambridge C1">
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Histórico de Escolas/Cursos</label>
                    <textarea name="historico_de_escolas" rows="3"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent resize-none"
                              placeholder="Ex: Cultura Inglesa (2 anos), Intercâmbio em Londres..."><%= idioma ? idioma.historico_de_escolas : '' %></textarea>
                </div>
            </div>

            <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
                <a href="/idiomas" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                    Cancelar
                </a>
                <button type="submit" class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition">
                    Salvar Idioma
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/layout-end') %>
