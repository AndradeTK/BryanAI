<!-- Header -->
<header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
    <div class="flex items-center justify-between px-6 py-4">
        <div>
            <h2 class="text-xl font-semibold text-gray-800"><%= title %></h2>
        </div>
        <div class="flex items-center gap-4">
            <!-- Quick Actions -->
            <button onclick="openQuickAnalysis()" class="flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Análise Rápida
            </button>
        </div>
    </div>
</header>

<!-- Quick Analysis Modal -->
<div id="quickAnalysisModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl mx-4 max-h-[90vh] overflow-y-auto">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-gray-800">Análise Rápida de Vaga</h3>
                <button onclick="closeQuickAnalysis()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div class="p-6">
            <form id="quickAnalysisForm">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Título da Vaga</label>
                    <input type="text" name="titulo" required 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                           placeholder="Ex: Desenvolvedor Full Stack Jr.">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Descrição da Vaga</label>
                    <textarea name="descricao" rows="6" required
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent resize-none"
                              placeholder="Cole aqui a descrição completa da vaga..."></textarea>
                </div>
                <div class="flex gap-3">
                    <button type="submit" class="flex-1 bg-primary-600 text-white py-2 px-4 rounded-lg hover:bg-primary-700 transition">
                        Analisar Compatibilidade
                    </button>
                    <button type="button" onclick="generateResume()" class="flex-1 bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition">
                        Gerar Currículo Otimizado
                    </button>
                </div>
            </form>
            <div id="quickAnalysisResult" class="mt-6 hidden">
                <div class="p-4 bg-gray-50 rounded-lg">
                    <div class="flex items-center gap-4">
                        <div id="scoreCircle" class="w-20 h-20 rounded-full flex items-center justify-center text-2xl font-bold text-white">
                            --
                        </div>
                        <div>
                            <p id="fitLevel" class="text-lg font-semibold text-gray-800"></p>
                            <p id="fitSummary" class="text-sm text-gray-600"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function openQuickAnalysis() {
    document.getElementById('quickAnalysisModal').classList.remove('hidden');
    document.getElementById('quickAnalysisModal').classList.add('flex');
}

function closeQuickAnalysis() {
    document.getElementById('quickAnalysisModal').classList.add('hidden');
    document.getElementById('quickAnalysisModal').classList.remove('flex');
}

document.getElementById('quickAnalysisForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target;
    const titulo = form.titulo.value;
    const descricao = form.descricao.value;

    try {
        const response = await fetch('/api/jobfit/quick', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ titulo, descricao })
        });
        const result = await response.json();
        
        if (result.success) {
            const data = result.data;
            const scoreCircle = document.getElementById('scoreCircle');
            scoreCircle.textContent = data.score;
            
            // Color based on score
            if (data.score >= 80) scoreCircle.className = 'w-20 h-20 rounded-full flex items-center justify-center text-2xl font-bold text-white bg-green-500';
            else if (data.score >= 60) scoreCircle.className = 'w-20 h-20 rounded-full flex items-center justify-center text-2xl font-bold text-white bg-yellow-500';
            else scoreCircle.className = 'w-20 h-20 rounded-full flex items-center justify-center text-2xl font-bold text-white bg-red-500';
            
            document.getElementById('fitLevel').textContent = `Compatibilidade: ${data.fit}`;
            document.getElementById('fitSummary').textContent = data.resumo;
            document.getElementById('quickAnalysisResult').classList.remove('hidden');
        }
    } catch (error) {
        alert('Erro ao analisar: ' + error.message);
    }
});

async function generateResume() {
    const form = document.getElementById('quickAnalysisForm');
    const titulo = form.titulo.value;
    const descricao = form.descricao.value;

    if (!titulo || !descricao) {
        alert('Preencha o título e a descrição da vaga');
        return;
    }

    try {
        const response = await fetch('/api/jobfit/generate', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ titulo, descricao, formato: 'pdf' })
        });
        const result = await response.json();
        
        if (result.success) {
            alert(`Currículo gerado com sucesso! Score: ${result.data.score}`);
            closeQuickAnalysis();
            window.location.reload();
        } else {
            alert('Erro: ' + result.error);
        }
    } catch (error) {
        alert('Erro ao gerar: ' + error.message);
    }
}
</script>
