<% const pageTitle = 'Experiências Profissionais'; %>
<%- include('../partials/layout-start', { title: pageTitle }) %>

<div class="max-w-5xl mx-auto">
    <!-- Header com botão de adicionar -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <p class="text-gray-500">Gerencie suas experiências profissionais</p>
        </div>
        <a href="/experiencias/new" class="flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Nova Experiência
        </a>
    </div>

    <% if (experiencias && experiencias.length > 0) { %>
    <div class="space-y-4">
        <% experiencias.forEach(function(exp) { %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-start">
                    <div class="flex-1">
                        <div class="flex items-center gap-3">
                            <h3 class="text-lg font-semibold text-gray-800"><%= exp.cargo %></h3>
                            <% var catClass = exp.categoria === 'Tecnologia' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800'; %>
                            <span class="px-2 py-1 text-xs rounded-full <%= catClass %>"><%= exp.categoria || 'Geral' %></span>
                        </div>
                        <p class="text-primary-600 font-medium mt-1"><%= exp.empresa %></p>
                        <p class="text-sm text-gray-500 mt-1"><%= exp.data_inicio %> - <%= exp.data_fim || 'Atual' %></p>
                    </div>
                    <div class="flex gap-2">
                        <a href="/experiencias/<%= exp.id %>/edit" class="p-2 text-gray-400 hover:text-primary-600 transition">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                        </a>
                        <form action="/experiencias/<%= exp.id %>/delete" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir esta experiência?')">
                            <button type="submit" class="p-2 text-gray-400 hover:text-red-600 transition">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>

                <% if (exp.descricao_atividades) { %>
                <div class="mt-4">
                    <h4 class="text-sm font-medium text-gray-600 mb-2">Atividades</h4>
                    <ul class="text-sm text-gray-700 space-y-1">
                        <% var atividades = exp.descricao_atividades.split('\n').filter(function(a) { return a.trim(); }).slice(0, 3); %>
                        <% atividades.forEach(function(a) { %>
                            <li class="flex items-start gap-2"><span class="text-primary-500 mt-1">•</span><%= a %></li>
                        <% }); %>
                        <% if (exp.descricao_atividades.split('\n').filter(function(a) { return a.trim(); }).length > 3) { %>
                            <li class="text-gray-400 text-xs">+ mais atividades...</li>
                        <% } %>
                    </ul>
                </div>
                <% } %>

                <% if (exp.tags_tecnicas) { %>
                <div class="mt-4 flex flex-wrap gap-2">
                    <% exp.tags_tecnicas.split(',').forEach(function(tag) { %>
                        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded"><%= tag.trim() %></span>
                    <% }); %>
                </div>
                <% } %>
            </div>
        </div>
        <% }); %>
    </div>
    <% } else { %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Nenhuma experiência cadastrada</h3>
        <p class="text-gray-500 mb-6">Adicione suas experiências profissionais para gerar currículos personalizados.</p>
        <a href="/experiencias/new" class="inline-block px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition">
            Adicionar Experiência
        </a>
    </div>
    <% } %>
</div>

<%- include('../partials/layout-end') %>
