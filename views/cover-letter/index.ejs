    </div>
</div>

<!-- Loading -->
<div id="loading" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center">
    <div class="bg-white rounded-xl p-8 text-center">
        <div class="animate-spin w-12 h-12 border-4 border-purple-200 border-t-purple-600 rounded-full mx-auto mb-4"></div>
        <p class="text-gray-800 font-medium">Gerando sua Cover Letter...</p>
        <p class="text-sm text-gray-500 mt-1">Isso pode levar alguns segundos</p>
    </div>
</div>

<script>
let currentCoverLetter = '';

async function generateCoverLetter() {
    const titulo = document.getElementById('titulo').value.trim();
    const empresa = document.getElementById('empresa').value.trim();
    const descricao = document.getElementById('descricao').value.trim();
    const tom = document.getElementById('tom').value;
    const idioma = document.getElementById('idioma').value;
    
    if (!titulo || !descricao) {
        alert('Preencha o t√≠tulo e a descri√ß√£o da vaga');
        return;
    }
    
    showLoading();
    
    try {
        const response = await fetch('/api/cover-letter/generate', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ titulo, empresa, descricao, tom, idioma })
        });
        
        const data = await response.json();
        
        if (data.success) {
            currentCoverLetter = data.coverLetter;
            document.getElementById('coverLetterText').textContent = data.coverLetter;
            
            const metadata = data.metadata;
            document.getElementById('metadata').innerHTML = `
                <span>üìã Tom: ${metadata.tom}</span>
                <span>üåê Idioma: ${metadata.idioma}</span>
                <span>üïê ${new Date(metadata.gerado_em).toLocaleString('pt-BR')}</span>
            `;
            
            document.getElementById('resultado').classList.remove('hidden');
            document.getElementById('resultado').scrollIntoView({ behavior: 'smooth' });
        } else {
            alert('Erro: ' + data.error);
        }
    } catch (error) {
        console.error('Erro:', error);
        alert('Erro ao gerar. Tente novamente.');
    } finally {
        hideLoading();
    }
}

function copyToClipboard() {
    navigator.clipboard.writeText(currentCoverLetter).then(() => {
        showNotification('Cover Letter copiada!', 'success');
    });
}

function downloadCoverLetter() {
    const blob = new Blob([currentCoverLetter], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'cover-letter.txt';
    a.click();
    URL.revokeObjectURL(url);
}

function showLoading() {
    document.getElementById('loading').classList.remove('hidden');
    document.getElementById('loading').classList.add('flex');
}

function hideLoading() {
    document.getElementById('loading').classList.add('hidden');
    document.getElementById('loading').classList.remove('flex');
}

function showNotification(message, type = 'info') {
    const colors = { success: 'bg-green-500', error: 'bg-red-500', info: 'bg-blue-500' };
    const notification = document.createElement('div');
    notification.className = `fixed bottom-4 right-4 ${colors[type]} text-white px-6 py-3 rounded-lg shadow-lg z-50`;
    notification.textContent = message;
    document.body.appendChild(notification);
    setTimeout(() => notification.remove(), 3000);
}
</script>

<%- include('../partials/layout-end') %>
