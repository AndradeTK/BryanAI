<!DOCTYPE html>
<html lang="<%= lang || 'pt-BR' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currículo - <%= perfil?.nome_completo || 'Bryan' %></title>
    <%
    // Traduções dos títulos das seções
    const translations = {
        'pt-BR': {
            summary: 'Resumo Profissional',
            experience: 'Experiência Profissional',
            skills: 'Habilidades Técnicas',
            education: 'Formação',
            languages: 'Idiomas',
            certifications: 'Certificações',
            projects: 'Projetos',
            present: 'Atual'
        },
        'en': {
            summary: 'Professional Summary',
            experience: 'Professional Experience',
            skills: 'Technical Skills',
            education: 'Education',
            languages: 'Languages',
            certifications: 'Certifications',
            projects: 'Projects',
            present: 'Present'
        },
        'fr': {
            summary: 'Résumé Professionnel',
            experience: 'Expérience Professionnelle',
            skills: 'Compétences Techniques',
            education: 'Formation',
            languages: 'Langues',
            certifications: 'Certifications',
            projects: 'Projets',
            present: 'Présent'
        }
    };
    const t = translations[lang] || translations['pt-BR'];
    
    // Traduções dinâmicas para conteúdo do banco de dados
    const dynamicTranslations = {
        // Níveis de idioma
        'Nativo': { en: 'Native', es: 'Nativo', fr: 'Natif' },
        'Fluente': { en: 'Fluent', es: 'Fluido', fr: 'Courant' },
        'Avançado': { en: 'Advanced', es: 'Avanzado', fr: 'Avancé' },
        'Intermediário': { en: 'Intermediate', es: 'Intermedio', fr: 'Intermédiaire' },
        'Básico': { en: 'Basic', es: 'Básico', fr: 'Basique' },
        // Idiomas
        'Português': { en: 'Portuguese', es: 'Portugués', fr: 'Portugais' },
        'Inglês': { en: 'English', es: 'Inglés', fr: 'Anglais' },
        'Francês': { en: 'French', es: 'Francés', fr: 'Français' },
        'Alemão': { en: 'German', es: 'Alemán', fr: 'Allemand' },
        'Italiano': { en: 'Italian', es: 'Italiano', fr: 'Italien' },
        'Japonês': { en: 'Japanese', es: 'Japonés', fr: 'Japonais' },
        'Chinês': { en: 'Chinese', es: 'Chino', fr: 'Chinois' },
        // Status
        'Concluído': { en: 'Completed', es: 'Completado', fr: 'Terminé' },
        'Em andamento': { en: 'In Progress', es: 'En progreso', fr: 'En cours' },
        'Cursando': { en: 'In Progress', es: 'En curso', fr: 'En cours' }
    };
    
    function translateText(text) {
        if (!text || lang === 'pt-BR') return text;
        const translation = dynamicTranslations[text];
        if (translation && translation[lang]) {
            return translation[lang];
        }
        return text;
    }
    %>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            font-size: 10pt;
            line-height: 1.5;
            color: #1f2937;
            background: white;
        }
        
        .container {
            max-width: 210mm;
            margin: 0 auto;
            padding: 15mm;
        }
        
        /* Header */
        .header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #3b82f6;
        }
        
        .header h1 {
            font-size: 24pt;
            font-weight: 700;
            color: #1e40af;
            margin-bottom: 8px;
        }
        
        .header .contact {
            font-size: 9pt;
            color: #4b5563;
        }
        
        .header .contact a {
            color: #3b82f6;
            text-decoration: none;
        }
        
        /* Sections */
        .section {
            margin-bottom: 18px;
        }
        
        .section-title {
            font-size: 12pt;
            font-weight: 600;
            color: #1e40af;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #e5e7eb;
            padding-bottom: 4px;
            margin-bottom: 12px;
        }
        
        /* Summary */
        .summary {
            font-size: 10pt;
            color: #374151;
            text-align: justify;
        }
        
        /* Experience */
        .experience-item {
            margin-bottom: 14px;
        }
        
        .experience-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 4px;
        }
        
        .job-title {
            font-weight: 600;
            font-size: 11pt;
            color: #111827;
        }
        
        .period {
            font-size: 9pt;
            color: #6b7280;
        }
        
        .company {
            font-weight: 500;
            color: #3b82f6;
            font-size: 10pt;
        }
        
        .bullets {
            margin-top: 6px;
            padding-left: 16px;
        }
        
        .bullets li {
            margin-bottom: 3px;
            color: #374151;
        }
        
        /* Skills */
        .skills-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        
        .skill-tag {
            background: #eff6ff;
            color: #1d4ed8;
            padding: 3px 10px;
            border-radius: 4px;
            font-size: 9pt;
            font-weight: 500;
        }
        
        .skill-tag.secondary {
            background: #f3f4f6;
            color: #4b5563;
        }
        
        /* Education */
        .education-item {
            margin-bottom: 10px;
        }
        
        .education-item .title {
            font-weight: 600;
            color: #111827;
        }
        
        .education-item .institution {
            color: #3b82f6;
            font-size: 9pt;
        }
        
        .education-item .status {
            color: #6b7280;
            font-size: 9pt;
        }
        
        /* Certifications */
        .cert-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 6px;
        }
        
        .cert-item .name {
            font-weight: 500;
        }
        
        .cert-item .issuer {
            color: #6b7280;
            font-size: 9pt;
        }
        
        /* Languages */
        .language-item {
            display: inline-flex;
            align-items: center;
            margin-right: 20px;
            margin-bottom: 6px;
        }
        
        .language-item .name {
            font-weight: 500;
            margin-right: 8px;
        }
        
        .language-item .level {
            color: #6b7280;
            font-size: 9pt;
        }
        
        /* Two columns for smaller sections */
        .two-columns {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        
        /* Print optimization */
        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            
            .container {
                padding: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <h1><%= perfil?.nome_completo || 'Nome Completo' %></h1>
            <p class="contact">
                <%= perfil?.email || '' %> 
                <% if (perfil?.telefone) { %> • <%= perfil.telefone %><% } %>
                <% if (perfil?.localizacao) { %> • <%= perfil.localizacao %><% } %>
                <% if (perfil?.linkedin) { %><br><a href="<%= perfil.linkedin %>">LinkedIn</a><% } %>
                <% if (perfil?.github) { %> • <a href="<%= perfil.github %>">GitHub</a><% } %>
            </p>
        </header>

        <!-- Summary -->
        <section class="section">
            <h2 class="section-title"><%= t.summary %></h2>
            <p class="summary"><%= curriculo?.resumo_profissional || perfil?.resumo_base || '' %></p>
        </section>

        <!-- Experience -->
        <section class="section">
            <h2 class="section-title"><%= t.experience %></h2>
            <% if (curriculo?.experiencias) { %>
                <% curriculo.experiencias.forEach(exp => { %>
                <div class="experience-item">
                    <div class="experience-header">
                        <span class="job-title"><%= exp.cargo %></span>
                        <span class="period"><%= exp.periodo %></span>
                    </div>
                    <div class="company"><%= exp.empresa %></div>
                    <% if (exp.bullets && exp.bullets.length > 0) { %>
                    <ul class="bullets">
                        <% exp.bullets.forEach(bullet => { %>
                        <li><%= bullet %></li>
                        <% }); %>
                    </ul>
                    <% } %>
                </div>
                <% }); %>
            <% } %>
        </section>

        <!-- Skills -->
        <section class="section">
            <h2 class="section-title"><%= t.skills %></h2>
            <div class="skills-grid">
                <% if (curriculo?.habilidades_tecnicas?.principais) { %>
                    <% curriculo.habilidades_tecnicas.principais.forEach(skill => { %>
                    <span class="skill-tag"><%= skill %></span>
                    <% }); %>
                <% } %>
                <% if (curriculo?.habilidades_tecnicas?.secundarias) { %>
                    <% curriculo.habilidades_tecnicas.secundarias.forEach(skill => { %>
                    <span class="skill-tag secondary"><%= skill %></span>
                    <% }); %>
                <% } %>
            </div>
        </section>

        <div class="two-columns">
            <!-- Education -->
            <section class="section">
                <h2 class="section-title"><%= t.education %></h2>
                <% if (formacao) { %>
                    <% formacao.forEach(f => { %>
                    <div class="education-item">
                        <div class="title"><%= f.titulo_curso %></div>
                        <div class="institution"><%= f.instituicao_projeto %></div>
                        <div class="status"><%= f.status %></div>
                    </div>
                    <% }); %>
                <% } %>
            </section>

            <!-- Languages -->
            <section class="section">
                <h2 class="section-title"><%= t.languages %></h2>
                <% if (idiomas) { %>
                    <% idiomas.forEach(i => { %>
                    <div class="language-item">
                        <span class="name"><%= translateText(i.idioma) %>:</span>
                        <span class="level"><%= translateText(i.nivel_cefr) %></span>
                    </div>
                    <% }); %>
                <% } %>
            </section>
        </div>

        <!-- Certifications -->
        <% if (cursos && cursos.length > 0) { %>
        <section class="section">
            <h2 class="section-title"><%= t.certifications %></h2>
            <% cursos.slice(0, 4).forEach(c => { %>
            <div class="cert-item">
                <span class="name"><%= c.titulo_do_curso %></span>
                <span class="issuer"><%= c.emissor_instituicao %></span>
            </div>
            <% }); %>
        </section>
        <% } %>
    </div>
</body>
</html>
