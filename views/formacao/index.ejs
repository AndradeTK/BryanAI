<% const pageTitle = 'Formação e Projetos'; %>
<%- include('../partials/layout-start', { title: pageTitle }) %>

<div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <p class="text-gray-500">Gerencie sua formação acadêmica e projetos</p>
        </div>
        <a href="/formacao/new" class="flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Adicionar
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Formação Acadêmica -->
        <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                </svg>
                Formação Acadêmica
            </h3>
            
            <% if (formacoes && formacoes.length > 0) { %>
                <% formacoes.forEach(function(f) { %>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <h4 class="font-semibold text-gray-800"><%= f.titulo_curso %></h4>
                            <p class="text-primary-600 text-sm mt-1"><%= f.instituicao_projeto %></p>
                            <% var statusClass = f.status && f.status.includes('Concluído') ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'; %>
                            <span class="inline-block mt-2 px-2 py-1 text-xs rounded-full <%= statusClass %>"><%= f.status %></span>
                        </div>
                        <div class="flex gap-1">
                            <a href="/formacao/<%= f.id %>/edit" class="p-2 text-gray-400 hover:text-primary-600">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                            </a>
                            <form action="/formacao/<%= f.id %>/delete" method="POST" onsubmit="return confirm('Confirma exclusão?')">
                                <button type="submit" class="p-2 text-gray-400 hover:text-red-600">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                    <% if (f.descricao_detalhada) { %>
                        <p class="text-sm text-gray-600 mt-3"><%= f.descricao_detalhada %></p>
                    <% } %>
                </div>
                <% }); %>
            <% } else { %>
            <div class="bg-gray-50 rounded-xl p-8 text-center">
                <p class="text-gray-500">Nenhuma formação cadastrada</p>
            </div>
            <% } %>
        </div>

        <!-- Projetos -->
        <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
                Projetos
            </h3>
            
            <% if (projetos && projetos.length > 0) { %>
                <% projetos.forEach(function(p) { %>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <h4 class="font-semibold text-gray-800"><%= p.titulo_curso %></h4>
                            <p class="text-green-600 text-sm mt-1"><%= p.instituicao_projeto %></p>
                            <span class="inline-block mt-2 px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full"><%= p.status %></span>
                        </div>
                        <div class="flex gap-1">
                            <a href="/formacao/<%= p.id %>/edit" class="p-2 text-gray-400 hover:text-primary-600">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                            </a>
                            <form action="/formacao/<%= p.id %>/delete" method="POST" onsubmit="return confirm('Confirma exclusão?')">
                                <button type="submit" class="p-2 text-gray-400 hover:text-red-600">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                    <% if (p.descricao_detalhada) { %>
                        <p class="text-sm text-gray-600 mt-3"><%= p.descricao_detalhada %></p>
                    <% } %>
                </div>
                <% }); %>
            <% } else { %>
            <div class="bg-gray-50 rounded-xl p-8 text-center">
                <p class="text-gray-500">Nenhum projeto cadastrado</p>
            </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/layout-end') %>
